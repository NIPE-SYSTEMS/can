#!/bin/bash

# Updating path to global stream file
echo "

 > Updating pathes...

"

echo '#define STREAM_PATH "'$(pwd)'/stream"
#define ICON_PATH "'$(pwd)'/icon.png"
#define USART_DEVICE "/dev/ttyAMA0"
#define SENSOR_IMAGE_PATH "'$(pwd)'/sensor.png"
#define SENSOR_IMAGE_PROCESSED_PATH "'$(pwd)'/sensor-processed.png"
#define LOCK_COMMANDS_FILE "'$(pwd)'/.lockCommands"'

echo '#define STREAM_PATH "'$(pwd)'/stream"
#define ICON_PATH "'$(pwd)'/icon.png"
#define USART_DEVICE "/dev/ttyAMA0"
#define SENSOR_IMAGE_PATH "'$(pwd)'/sensor.png"
#define SENSOR_IMAGE_PROCESSED_PATH "'$(pwd)'/sensor-processed.png"
#define LOCK_COMMANDS_FILE "'$(pwd)'/.lockCommands"' > ./bin/globals.h

echo "

 > Finished. Thank you.
 > Please check for errors in the output of this script.

"
